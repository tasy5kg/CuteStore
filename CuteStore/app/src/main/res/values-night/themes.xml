<resources>

    <style name="Theme.CuteStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:itemTextAppearance">@style/nightMenuTextAppearance</item>
    </style>

    <style name="title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white_primary_foreground</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white_secondary_foreground</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/orange_dark</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="DialogActivity" parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
    </style>

    <style name="nightMenuTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white_primary_foreground</item>
    </style>
</resources>
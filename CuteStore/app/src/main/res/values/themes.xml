<resources>

    <style name="Theme.CuteStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black_primary_foreground</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black_secondary_foreground</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="DialogActivity" parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
    </style>
</resources>